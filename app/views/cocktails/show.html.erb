<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to  "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %> </p>
  <% end %>
  <h1><%= @cocktail.doses.name %></h1>
  <%= link_to  "Go back", cocktails_path, class: 'p-3 ml-3 btn-primary'  %>
  <%= link_to  "Add dose", new_cocktail_dose_path(@cocktail), class: 'p-3 ml-3 btn-primary'  %>

</div>

